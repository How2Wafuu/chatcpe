generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model answers {
  answer_id   Int        @id(map: "answer_id")
  answer_text String     @db.Char(1)
  question_id Int?
  questions   questions? @relation(fields: [question_id], references: [question_id], onDelete: NoAction, onUpdate: NoAction, map: "question_id")
}

model category {
  category_id   Int         @id(map: "category_id") @default(autoincrement())
  category_name String      @db.Char(1)
  questions     questions[]
}

model questions {
  question_id   Int       @id(map: "questions_id")
  question_text String    @db.Char(1)
  visit_count   Int?
  category_id   Int?
  answers       answers[]
  category      category? @relation(fields: [category_id], references: [category_id], onDelete: NoAction, onUpdate: NoAction, map: "category_id")
}
